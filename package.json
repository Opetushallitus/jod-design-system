{
  "name": "@jod/design-system",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "engines": {
    "node": "^22.0.0"
  },
  "license": "EUPL-1.2",
  "scripts": {
    "dev": "vite build -w",
    "build": "tsc && vite build",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test:unit": "vitest --run",
    "test:unit-update-snapshot": "vitest --run -u",
    "test:watch": "vitest --watch",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build",
    "prepare": "husky && npm run build"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "dependencies": {
    "@ark-ui/react": "^5.30.0",
    "@floating-ui/react": "^0.27.16",
    "@headlessui/react": "^2.2.9",
    "cva": "^1.0.0-beta.4",
    "focus-trap-react": "^11.0.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^3.4.1",
    "@lavamoat/preinstall-always-fail": "^2.1.1",
    "@singlestore/eslint-plugin-react-hooks-disable-import": "^1.0.2",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-storybook": "^10.1.11",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "storybook": "$storybook"
  },
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.js"
    },
    "./icons": {
      "import": "./lib/icons/index.js",
      "require": "./lib/icons/index.js"
    },
    "./dist/main.css": "./dist/main.css",
    "./lib/theme.css": "./lib/theme.css"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@tailwindcss/vite>@tailwindcss/oxide": true,
      "@vitejs/plugin-react-swc>@swc/core": true,
      "vite>esbuild": true
    }
  }
}
